<launch>

	<node name="thor_node" pkg="thor" type="thor_node" output="screen"/>

	<!--Turtlebot setup-->
	<include file="$(find turtlebot_bringup)/launch/minimal.launch" ns="thor" />
	<include file="$(find turtlebot_bringup)/launch/3dsensor.launch" ns="thor" />

	<!--Navigation stack setup-->
	<node name="ar_localization" pkg="navigation" type="ar_tag_localization" output="screen" ns="thor"/>
	<node name="odom_filter" pkg="robot_pose_ekf" type="robot_pose_ekf" ns="thor">
		<param name="output_frame" value="odom_filtered"/>
    	<param name="freq" value="30.0"/>
    	<param name="sensor_timeout" value="1.0"/>
    	<param name="odom_used" value="true"/>
    	<param name="imu_used" value="false"/>
    	<param name="vo_used" value="true"/>
    	<param name="debug" value="false"/>
    	<param name="self_diagnose" value="false"/>
    	<remap from="vo" to="ar_tag_odom" />
  </node>

	<node name="thor_planner" pkg="navigation" type="astar" output="screen" ns="thor">
		<param name="pose_topic" value="pose" />
		<param name="map_topic" value="/hsmrs/map" />
	</node>

	<node name="thor_executor" pkg="navigation" type="path_executor" output="screen" ns="thor">
		<param name="pose_topic" value="pose" />
		<param name="vel_topic" value="cmd_vel_mux/input/teleop" />
		<param name="max_linear_velocity" value="0.2" />
		<param name="max_angular_velocity" value="0.5" />		
	</node>

	<!--AR Marker setup-->
	<arg name="marker_size" default="20.3" />
	<arg name="max_new_marker_error" default="0.08" />
	<arg name="max_track_error" default="0.2" />
	<arg name="cam_image_topic" default="/thor/camera/rgb/image_color" />
	<arg name="cam_info_topic" default="/thor/camera/rgb/camera_info" />
	<!--arg name="cam_image_topic" default="/thor/camera/rgb/image_color" /-->
	<!--arg name="cam_info_topic" default="/thor/camera/rgb/camera_info" /-->	
	<arg name="output_frame" default="/base_link" />

	<node name="ar_track_alvar" pkg="ar_track_alvar" type="individualMarkersNoKinect" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame)" ns="thor"/>

</launch>
